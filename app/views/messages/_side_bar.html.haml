.Sid-ber
  .user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to "groups/new", class: "top-items__icons__btn" do
          = icon('far', 'edit', class: "top-items__icons__btn--icon")
          %span<>
        = link_to edit_user_path(current_user), class: "top-items__icons__btn" do
          = icon('fas', 'cog', class: "top-items__icons__btn--icon")
          %span<>

  .group-list
    - current_user.groups.each do |group|
      .Group
        = link_to '#' do
          .Group__name
            = group.name
          .Group__message
