.message-box
  .message-box__message-info
    .message-box__message-info__user-name
      = message.user.name
    .message-box__message-info__message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-box__message-content
    - if message.content.present?
      %p.message-box__message-content
        = message.content
    = image_tag message.image.url, class: 'message-box__message-content__image' if message.image.present?